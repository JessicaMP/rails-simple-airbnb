<h1>All our Flats (<%= @flats.length %>)</h1>

<div class="row row-cols-3 g-3 py-3">
  <% @flats.each do |flat| %>
    <div class="col">
      <div class="card text-dark bg-light border-light shadow" style="height: 100%">
        <div class="card-body d-flex flex-column gap-3">
          <h5 class="card-title m-0"><%= flat.name %></h5>
          <p class="card-text m-0 fs-6"><%= flat.address %></p>

          <div class="d-flex gap-3">
            <div class="d-flex gap-2 align-items-center">
              <i class="fa-solid fa-users"></i>
              <p class="m-0 fs-6"><%= flat.number_of_guests %></p>
            </div>
            <div class="d-flex gap-2 align-items-center">
              <i class="fa-solid fa-euro-sign"></i>
              <p class="m-0 fs-6"><%= flat.price_per_night %></p>
            </div>
          </div>
        </div>
        <div class="card-footer bg-white">
          <a href="<%= flat_path(flat) %>" class="card-link">More info</a>
        </div>
      </div>
    </div>
  <% end %>
</div>
